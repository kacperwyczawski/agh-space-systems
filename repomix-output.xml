                self.sensors['oxidizer_pressure'] = min(90.0, self.sensors['oxidizer_pressure'] + dt * 2.5)
                if self.sensors['oxidizer_pressure'] >= 90.0:
                    self.explode("Oxidizer pressure too high (90 bars) - tank explosion")
