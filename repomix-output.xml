        elif self.state == SimulationState.FREEFALL:
            self.velocity -= 9.81 * dt
            self.sensors['altitude'] += self.velocity * dt
            
            self.sensors['angle'] = min(180.0, self.sensors['angle'] + dt * 20.0)
            
            if self.relays['parachute'] == 1:
